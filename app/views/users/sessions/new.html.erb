<div class="login-bk"></div>
<div class="overlay"></div>
<div class="white-box" ng-controller="userController">
  <h2>Sign In</h2>
  <form ng-enter="login(user)">  
    <ul class="list-unstyled">
      <li>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><span class="fa fa-envelope"></span></div>
            <input type="text" placeholder="Email" ng-model="user.email"/>
          </div>
        </div>
      </li>
      <li>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon"><span class="fa fa-lock"></span></div>
            <input type="password" placeholder="password" ng-model="user.password"/>
          </div>
        </div>
      </li>
      <li class="remember-me">
        <input type="checkbox" name=""> Remember Me
        <span class="pull-right">
          <a href="">Forgor password?</a>
        </span>
      </li>
      <li class="prelative">
        <input type="button" value="Signin" ng-click="login(user)" ><span class="fa fa-spin" ng-class="{'fa-spinner' : logging }"> </span>
      </li>
      <li class="direction-link">
        You don't have an account? <a href="/users/sign_up">Signup</a>
      </li>
    </ul>
  </form>
</div><!--/white-box-->

