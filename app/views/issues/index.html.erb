<div class="layout" id="general" ng-controller="issueController">
<h2>Issues</h2>
  <table class="table vehicles-list table-hover">
    <thead>
      <tr>
        <th>
          <a>Issue code
            <span class="fa fa-caret-down" ng-click="sortType = 'issue_code'"></span>
            <span class="fa fa-caret-up" ng-click="sortType = -'issue_code'"></span>
          </a>
        </th>
        <th>
          <a>Vehicle Number
            <span class="fa fa-caret-down" ng-click="sortType = 'vehicle_number'"></span>
            <span class="fa fa-caret-up" ng-click="sortType = -'vehicle_number'"></span>
          </a>
        </th>
        <th>
          <a>On
            <span class="fa fa-caret-down" ng-click="sortType = 'issue_date'"></span>
            <span class="fa fa-caret-up" ng-click="sortType = -'issue_date'"></span>
          </a>
        </th>
        <th>
          <a>Schedule</a>
        </th>
        <th>
          <a>Action</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="issue in issues | orderBy : 'issue_level' : sortType" ng-class="{'p0': p0.indexOf(issue.issue_code) > -1, 'p1': p1.indexOf(issue.issue_code) > -1}">
        <td class="issue-code">{{issue.issue_code}}</td>
        <td>{{issue.vehicle_number}}</td>
        <td>{{issue.issue_date}}</td>
        <td>
          <a class="check-vehicle" href="" ng-if="issue.status == 'pending'" ng-click="scheduleDetails(issue)" data-toggle="modal" data-target="#schedule">Schedule It</a>
          <span class="check-vehicle-scheduled" ng-if="issue.status == 'scheduled'">Scheduled</span>
        </td>
        <td>
          <a class="action-btns" href="" title="Delete Vehicle" ng-click="removeIssue(issue.vehicle_id)" data-toggle="tooltip" data-placement="top"><i class="fa fa-trash"></i></a>
           <a class="action-btns" href="" title="{{issue.issue_description}}" data-toggle="tooltip" data-placement="top"><i class="fa fa-info"></i></a>
         </a>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="text-center" ng-if="issues.length == 0">No records found</div>
  <%= render "partials/issue_schedule" %>
</div>