<div class="layout" id="general" ng-controller="company" ng-init="modal">
    <input type="button" data-toggle="modal" data-target="#company" value="Add company" ng-click="modal='create'"/>
    <%= render "partials/company_form" %>
    <div ng-if="companies.length>0">
        <h1>Companies</h1>
        <div class="row top-search" >
            <div class="col-md-12 pad-zero">
              <form action="" class="col-md-6 pad-zero">
                <div class="form-group">
                  <div class="input-group">
                    <div class="input-group-addon"><span class="fa fa-search"></span></div>
                    <input type="text" placeholder="Search Customers..." />
                  </div>
                </div>
              </form>
              <!--
              <div class="col-md-6 text-right">
                <a href="companies/new" class="action-btn"><i class="fa fa-plus"></i> Customer</a>
              </div>
              -->
              <div class="clearfix"></div>
            </div>
        </div>
        <table class="table table-hover customer-list" >
                <thead>
                    <tr>
                      <th>
                        <a>Index
                          <span class="fa fa-caret-down"></span>
                          <span class="fa fa-caret-up" ></span>
                        </a>
                      </th>
                      <th>
                        <a>Name
                          <span class="fa fa-caret-down"></span>
                          <span class="fa fa-caret-up" ></span>
                        </a>
                      </th>
                      <th>
                        <a>Contact
                          <span class="fa fa-caret-down"></span>
                          <span class="fa fa-caret-up" ></span>
                        </a>
                      </th>
                      <th>
                        <a>Address
                          <span class="fa fa-caret-down"></span>
                          <span class="fa fa-caret-up" ></span>
                        </a>
                      </th>
                      <th>Delete</th> 
                      <th>Edit</th> 
                    </tr>
              </thead>
              <tbody>
                <tr ng-repeat="company in companies">
                    <th>{{$index+1}}</th>
                    <th>{{company.name}}</th>
                    <th>{{company.contact_number}}</th>
                    <th>{{company.address}}</th>
                    <th ng-click="deleteCompany(companies[$index])" ><a>Delete</a></th>
                    <th ng-click="modal='edit';editCompany(companies[$index]);"><a>Edit</a></th>
                </tr>
                </tbody>
        </table>
    </div> 
    <div ng-if="companies.length==0">
        <div class="new-cm">
                <h1>please add a company</h1>
        </div>
    </div>

</div>
