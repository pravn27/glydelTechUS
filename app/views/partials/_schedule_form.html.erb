<div class="modal fade" tabindex="-1" role="dialog" id="schedule">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Add Schedule</h4>
        </div>
        <div class="modal-body">
          <div class="schedule-form">
            <ul class="list-unstyled">
              <li>
                <label>Vehicle Type</label>
                <select ng-model="schedule.vehicle_type" ng-options="type for type in vehicle_types"></select>
              </li>
              <li>
                <label>Vehicle Name</label>
                <select ng-model="schedule.vehicle_name" ng-options="vehicle.make for vehicle in vehicles"></select>
              </li>
              <li>
                <label>Scheduled on</label>
                <input type="date" placeholder="DD/MM/YYYY" ng-model="schedule.scheduled_date">
              </li>
              <li>
                <label>Decription</label>
                <textarea ng-model="schedule.scheduling_details"></textarea>
              </li>
              <li>
                <label>&nbsp;</label>
                <input class="action-btn" type="button" value="Add" ng-click="addSchedule(schedule)" ng-if="add">
                <input class="action-btn" type="button" value="Edit" ng-click="updateSchedule(schedule)" ng-if="edit">
              </li>
            </ul>
          </div>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->